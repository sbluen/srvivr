<h1>Listing users</h1>
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<%= form_tag 'users', :method => 'get' do %>
  <p>
  	<%= label_tag(:search, "Search for users:") %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<%if @users then%>
	<table>
	  <tr>
	    <th>Name</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>
	
	<%=will_paginate @users%>
	<%=render :partial => '/users/list_user', :collection => @users%>
	</table>
<%end%>

